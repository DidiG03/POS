{
  "name": " Code Orbit-pos",
  "version": "0.1.0",
  "private": true,
  "description": "Desktop POS for  Code Orbit Agroturizem (Electron + React + Prisma)",
  "type": "module",
  "main": "dist/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=20",
    "format": "prettier --write .",
    "test": "vitest run --passWithNoTests --exclude \"tests/**\"",
    "test:ui": "playwright test",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev --name init",
    "db:seed": "tsx scripts/seed.ts",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.17.0",
    "pnpm": ">=8"
  },
  "build": {
    "appId": "com. Code Orbit.pos",
    "productName": " Code Orbit POS",
    "files": [
      "dist/**",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.business"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publisherName": " Code Orbit Agroturizem"
    },
    "publish": {
      "provider": "github",
      "owner": "",
      "repo": ""
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx,json,css,md}": [
      "pnpm lint",
      "prettier --write"
    ]
  },
  "pnpm": {
    "allowedBuiltDependencies": [
      "@prisma/engines",
      "@prisma/client",
      "prisma",
      "electron",
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "@tailwindcss/oxide",
      "electron",
      "esbuild",
      "prisma"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.6",
    "electron-vite": "^4.0.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.1",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@sentry/electron": "^7.6.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.1",
    "electron-updater": "^6.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.0",
    "zod": "^4.0.16",
    "zustand": "^5.0.7"
  }
}
